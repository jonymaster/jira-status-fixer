{
  "manifest_version": 3,
  "name": "Jira Status Field Fixer",
  "version": "1.0.0",
  "description": "Fixes the misplaced Status field and displays Resolution labels in Jira ticket views",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/*",
        "*://*.jira.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jira Status Field Fixer"
  }
}
